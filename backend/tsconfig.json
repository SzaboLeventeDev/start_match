{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
  },
  "include": ["src/**/*", "src/**/__tests__/*", "src/**/*.test.ts", "src/**/*.spec.ts"],
  "exclude": ["node_modules"]
}
